.chat-side
  
  .chat-side__header
    
    .chat-side__header-box
      
      %p.chat-side__header-box-user
        = current_user.name
      
      %ul.chat-side__header-box-menu 
   
        %li.chat-side__header-box-edit-icon
          = link_to new_group_path do
            = icon('far', 'edit')
        %li.chat-side__header-box-gear-icon
          = link_to edit_user_path(current_user)  do
            = icon('fas', 'cog', class: 'icon')

  .groups
    - current_user.groups.each do |group|
      .groups__group
        = link_to group_messages_path(group) do
          .groups__group-name
            = group.name
          .groups__group-message
            = group.show_last_message