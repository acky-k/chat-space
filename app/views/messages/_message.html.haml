.chat-main__messages-post{data: {message: {id: message.id}}}
  .chat-main__messages-post-box
    .chat-main__messages-post-box-name
      = message.user.name
    .chat-main__messages-post-box-date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__messages-text
    - if message.content.present?
      %p.chat-main__messages-text-content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?